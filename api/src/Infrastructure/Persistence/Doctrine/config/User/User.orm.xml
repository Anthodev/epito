<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\User\User" table="users">
        <id name="id" type="uuid" column="id">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Symfony\Bridge\Doctrine\IdGenerator\UuidGenerator"/>
        </id>

        <field name="email" type="string" column="email" length="255">
        </field>

        <field name="username" type="string" column="username" length="255">
        </field>

        <field name="password" type="string" column="password" length="255">
        </field>

        <field name="plainPassword" type="string" column="plain_password" length="255" nullable="true">
        </field>

        <field name="enabled" type="boolean" column="enabled">
            <options>
                <option name="default">false</option>
            </options>
        </field>

        <field name="createdAt" type="datetime_immutable" column="created_at">
            <options>
                <option name="default">NOW()</option>
            </options>
        </field>

        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <options>
                <option name="default">NOW()</option>
            </options>
        </field>

        <many-to-one
            field="role"
            target-entity="App\Domain\Model\User\Role"
            inversed-by="users"
        />

        <indexes>
            <index name="users_email" columns="email"/>
            <index name="users_username" columns="username"/>
            <index name="users_role_id" columns="role_id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint name="users_email_unique_constraint" columns="email"/>
            <unique-constraint name="users_username_unique_constraint" columns="username"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
