<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\Show\Following" table="followings">
        <id name="id" type="uuid" column="id">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Symfony\Bridge\Doctrine\IdGenerator\UuidGenerator"/>
        </id>

        <field name="startDate" type="datetime" column="start_date">
        </field>

        <field name="endDate" type="datetime" column="end_date" nullable="true">
        </field>

        <field name="createdAt" type="datetime_immutable" column="created_at">
            <options>
                <option name="default">NOW()</option>
            </options>
        </field>

        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <options>
                <option name="default">NOW()</option>
            </options>
        </field>

        <many-to-one field="user" target-entity="App\Domain\Model\User\User">
            <join-column name="user_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <many-to-one field="episode" target-entity="App\Domain\Model\Show\Episode">
            <join-column name="episode_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <many-to-one field="season" target-entity="App\Domain\Model\Show\Season">
            <join-column name="season_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <many-to-one field="show" target-entity="App\Domain\Model\Show\Show">
            <join-column name="show_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <indexes>
            <index name="followings_user_id" columns="user_id"/>
            <index name="followings_episode_id" columns="episode_id"/>
            <index name="followings_season_id" columns="season_id"/>
            <index name="followings_show_id" columns="show_id"/>
            <index name="followings_start_date" columns="start_date"/>
            <index name="followings_end_date" columns="end_date"/>
        </indexes>

        <unique-constraints>
            <unique-constraint name="followings_user_episode_unique" columns="user_id,episode_id"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
